{{- header_css | strip_newlines | remove: '  ' | remove: '  ' -}}
.content_{{section.id}}{margin-top: {{section.settings.header_margin_top | default: '0' | split: '|' | first }};margin-bottom: {{section.settings.header_margin_bottom | default: '0' | split: '|' | first }};padding: {{section.settings.header_padding | default: '0' | split: '|' | first | replace : '-',' '}};}{{--}}
{%- endstyle -%}
<div class="{{section.settings.width_header}}" data-respon="{'el':'.header','mt':'{{section.settings.header_margin_top}}','mb':'{{section.settings.header_margin_bottom}}','p':'{{section.settings.header_padding}}'}">
  <div class="main-header kt--drop-w kt--drop-w-d" data-header-sticky="{{section.settings.sticky_menu}}">
    <div class="min-height row align-items-center justify-content-between">
      <div class="col">
        <div class="btn-link mobile-menu-toggle menu-toggle d-lg-none">
          <i class="d-icon-bars2"></i>
        </div>
        <div class="block-search d-none d-sm-block">
          {% render 'search-bar', search_style: "input" %}
        </div>
      </div>
      <div class="col-auto header-logo">
        {%- render 'kt_logo_header' -%}
      </div>
      <div class="col header-control">
        <div class="control-inner d-flex align-items-center justify-content-end">
          {%- if section.settings.use_call-%}
          <div class="block-call">
            <a href="tel:{{settings.phone_contact | remove:' '}}" class="icon-link">
              <span class="icon-count">
                {% comment %}<svg class="molla-svg-icon" viewBox="0 0 32 32"><use xlink:href="#icon-wishlist"></use></svg>{% endcomment %}
                <span class="d-icon-phone"></span>
              </span>
              <span class="call-label d-none d-lg-block">
                {{'layout.header.call_box_title' | t}}
                <strong class="d-block">{{settings.phone_contact}}</strong>
              </span>
            </a>
          </div>
          <span class="divider d-none d-sm-block"></span>
          {%- endif -%}
          {%- if section.settings.use_account and shop.customer_accounts_enabled -%}
          <div class="block-account d-none d-sm-block">
            <a href="{%if customer%}{{routes.account_url}}{%else%}{{routes.account_login_url}}{%endif%}" class="icon-link"{%unless customer%}{%-if shop.customer_accounts_enabled and settings.modal_login-%} data-bs-toggle="modal" data-bs-target="#rd_accModal" data-bs-modal="{{routes.account_login_url}}/?section_id=kt_account_popup&q=content"{%endif%}{%endunless%}>
              <div class="icon-count">
                <!-- <svg class="molla-svg-icon" viewBox="0 0 32 32"><use xlink:href="#icon-user"></use></svg> -->
                <i class="d-icon-user"></i>
              </div>
              <span class="d-none">{{'customer.account.mini_title' | t}}</span>
            </a>
          </div>
          {%- endif -%}
          {%- if section.settings.use_compare and settings.use_compare-%}
          <div class="block-compare d-none d-sm-block">
            <div class="mini-compare load kt--drop-i">
              <div class="icon-link kt--drop-title"><div class="icon-count kt-button" data-bs-toggle="offcanvas" data-bs-target="#compareOffcanvas" aria-controls="compareOffcanvas">
                <!-- <svg class="molla-svg-icon" viewBox="0 0 32 32"><use xlink:href="#icon-compare"></use></svg> -->
                <span class="d-icon-compare"></span>
                <span class="count compareCount d-none">0</span></div></div>
              <div class="mini-compare-content kt--drop-in"><div class="no-compare"><p>{{'products.compare.no_compare' | t}}</p></div><div class="mini-compare-body"></div></div>
            </div>
          </div>
          {%- endif -%}
          {%- if section.settings.use_wishlist and settings.use_wishlist -%}
          <div class="block-wishlist d-none d-sm-block">                  
            <a href="{{pages['wishlist'].url}}" class="icon-link">
              <div class="icon-count">
                {% comment %}<svg class="molla-svg-icon" viewBox="0 0 32 32"><use xlink:href="#icon-wishlist"></use></svg>{% endcomment %}
                <span class="d-icon-heart"></span>
                <span class="count wishlist-count d-none">0</span>
              </div>
              <span class="d-none">{{'products.wishlist.title' | t}}</span>
            </a>
          </div>
          {%- endif -%}
          <span class="divider d-none d-sm-block"></span>
          {%- if section.settings.use_cart-%}
          <div class="block-minicart mr-lg-1">
            {%- render 'kt_mini-cart' -%}
          </div>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</div>
{%- unless cart.attributes.theme_mobile == 'true' -%}
<div class="header-bottom-wrap">
  <div class="{{section.settings.width_header}}">
    <div class="header-bottom d-none d-lg-block{% comment %} not-sticky{% endcomment %} rounded">
      <div class="main-header header-menu horizon-menu d-flex align-items-center" style="--mcontainer:1200px;">
        <div class="dropdown me-4"{%if template contains 'index'%} style="pointer-events: none"{%endif%}>
          <button type="button" class="btn btn-dropdown-toggle"><i class="d-icon-bars2"></i><span>{{section.settings.title_categories}}</span></button>
