{%- style -%}
{%- capture header_css -%}
  .header {
    --text: {{section.settings.color_text_header}};
    --text_hv: {{section.settings.color_text_header_hv}};
    {%if section.settings.color_head_bg != blank%}--background: {{ section.settings.color_head_bg }};{% endif %}
    background: var(--background, var(--bg));
    --header_position: static;
  }
  {%- if section.settings.color_head_bg_op != 1-%}
    .template-index #header {
      --header_position: absolute;
      {%if section.settings.color_head_bg != blank%}
      --opHeader: {{ section.settings.color_head_bg_op }};
      --head_bg_rgb: {{ section.settings.color_head_bg | color_to_rgb | remove: 'rgb(' | remove: ')' }};
      background: rgba(var(--head_bg_rgb), var(--opHeader));
      {% endif %}
    }
  {%- endif -%}
  .main-mn{
    --nv_pd_left: {{section.settings.padding_size}}px;
  }
  .header .mn-lv1>a::before {
    content: '';
    display: block;
    position: absolute;
    bottom: 0.5625rem;
    left: 0;
    width: 100%;
    height: 0.125rem;
    border: 1px solid;
    transform-origin: right center;
    transform: scale(0, 1);
    transition: transform .3s;
  }
  [dir="rtl"] .header .mn-lv1>a::before {
    left: auto;
    right: 0;
    transform-origin: left center;
  }
  .header .mn-lv1>a::before {
    bottom: 0.625rem;
  }
  .header .mn-lv1:hover>a::before, .header .mn-lv1.active>a::before {
    transform-origin: left center;
    transform: scale(1, 1);
  }
  [dir="rtl"] .header .mn-lv1:hover>a::before, .header .mn-lv1.active>a::before {
    transform-origin: right center;
  }
  .header-top .delimiter {
    margin: 0 0.3125rem;
    color: #aaa;
    line-height: 0;
  }
  .header .header-control .delimiter{
    font-size: 0.875rem;
    color: #aaa;
    font-weight: 400;
    margin-right: 0.625rem;
    margin-left: 0.625rem;
  }
  .header .divider {
    display: inline-block;
    vertical-align: middle;
    margin: 0 1.25rem;
    height: 1.5625rem;
    width: 1px;
    background-color: #e1e1e1;
  }
  .header-top .block-info {
    font-size: 0.75rem;
  }
  .header .main-header .block-account {
    font-size: 1rem;
    font-weight: 600;
  }
  .header .block-account a{
    color: var(--text);
  }
  .header .block-account a:hover {
    color: var(--text_hv);
  }
  .header .cart-label {
    cursor: pointer;
    margin: 0 0.625rem 0 0;
    font-weight: inherit;
    text-transform: none;
    letter-spacing: -.025em;
    font-size: 1rem;
    font-weight: 600;
    white-space: nowrap;
  }
  [dir="rtl"] .header .cart-label {
    margin: 0 0 0 0.625rem;
  }
  .cart-name-delimiter {
    color: #ccc;
    transition: color .3s;
  }
  .header .call-label p,
  .header .cartCost{
    font-size: 0.875rem;
    font-weight: 700;
    letter-spacing: -.0428em;
    line-height: 1;
    display: inline-block;
    margin-bottom: 0;
  }
  .header .call-label,
  .header .cart-label{
    text-align: initial;
  }
  .header .cart-label .title{
    font-size: 1rem;
    font-weight: 600;
    margin: 0;
  }
  .header .icon-link h4,
  .header .icon-link p{
    transition: color .3s;
  }
  .header .icon-link:hover h4,
  .header .icon-link:hover p{
    color: var(--bs-primary);
  }
  .header .control-inner>div .icon-link {
    display: flex;
    align-items: center;
  }
  .header .control-inner > div.block-minicart .icon-link .count {
    position: static;
    right: auto;
    top: auto;
    width: auto;
    height: auto;
    font-size: 0.875rem;
    line-height: normal;
    color: var(--bs-primary);
  }
  .header .cart-label .title, .header .cart-name-delimiter{
    display: inline-block;
  }
  .header .cart-label{
    display: none;
  }
  .header-logo {
    margin-bottom: 0.0625rem;
  }
  .main-mn>.mn-i>a {
    padding: 1.25rem 0;
  }
  @media (min-width: 576px){
    .control-inner>div .icon-link,
    .control-inner>div .menu-toggle {
      padding-right: 1.5rem;
      padding-left: 1.5rem;
    }
  }
  @media (min-width: 768px){
    .header .cart-label{
      display: block;
    }
  }
  @media (min-width: 992px){
    .min-height {
      padding-top: 1.34375rem;
      padding-bottom: 1.34375rem;
    }
  }
  @media (min-width: 1200px){
  }
{%-endcapture-%}
{{- header_css | strip_newlines | remove: '  ' | remove: '  ' -}}
.content_{{section.id}}{margin-top: {{section.settings.header_margin_top | default: '0' | split: '|' | first }};margin-bottom: {{section.settings.header_margin_bottom | default: '0' | split: '|' | first }};padding: {{section.settings.header_padding | default: '0' | split: '|' | first | replace : '-',' '}};}
{%- endstyle -%}
<div class="{{section.settings.width_header}}" data-respon="{'el':'.header','mt':'{{section.settings.header_margin_top}}','mb':'{{section.settings.header_margin_bottom}}','p':'{{section.settings.header_padding}}'}">
  <div class="main-header kt--drop-w kt--drop-w-d" data-header-sticky="{{section.settings.sticky_menu}}">
    <div class="min-height row align-items-center justify-content-between">
      <div class="col-3 col-sm-4 main-header">
        <button type="button" class="btn-link mobile-menu-toggle menu-toggle d-xl-none" data-bs-toggle="offcanvas" data-bs-target="#offcanvasMenuMb" aria-controls="offcanvasMenuMb">
          <i class="d-icon-bars2"></i>
        </button>
        <div class="header-menu horizon-menu d-none d-xl-block" style="--mcontainer:1200px;">
          <nav class="main-navigation" data-width="1200">
            {%-render 'menu_import'-%}
          </nav>
        </div>
      </div>
      <div class="col-6 col-sm-auto header-logo d-flex justify-content-center">
        {%- render 'kt_logo_header' -%}
      </div>
      <div class="col-3 col-sm-4 header-control">
        <div class="control-inner d-flex align-items-center justify-content-end">
          {%- if section.settings.use_account and shop.customer_accounts_enabled -%}
          <div class="block-account d-none d-lg-flex align-items-center">
            {%- if customer -%}
            <a href="{{routes.account_url}}"><span>{{"layout.customer.account" | t}}</span></a>
            {%- else -%}
            <a href="{{routes.account_login_url}}"><span>{{"layout.customer.log_in" | t}}</span></a>
            <span class="delimiter">or</span>
            <a href="{{routes.account_register_url }}"><span>{{"layout.customer.create_account" | t}}</span></a>
            {%- endif -%}
          </div>
          {%- endif -%}
          {%- if section.settings.use_cart-%}
          <div class="block-minicart mr-lg-1">
            {%- render 'kt_mini-cart', layout: 'text' -%}
          </div>
          {%- endif -%}
        </div>
      </div>
      {% comment %}{%- if settings.use_header_mobile_search_box and template.name != 'search' -%}
      {%- endif -%}{% endcomment %}
    </div>
  </div>
</div>

